<div class="text-center mb-3">
    <h1 class="mb-0">Random getal generator</h1>
    <small>Genereer een random getal, als je een negative mogelijkheid op 'waar' zet dan kan er ook een negatief getal uitkomen</small>
    <small class="d-block"><i>Youri Bakker</i></small>
</div>

<form method="get" onsubmit="return validate()" name="int" id="form" class="form-floating">
    <div class="row justify-content-center">
        <div class="form-check" style="width: fit-content">
            <input class="form-check-input" type="checkbox" value="" name="negative" id="formCheckChecked" checked="">
            <label class="form-check-label" for="formCheckChecked">Negative mogelijkheid?</label>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-3 row">
        <button type="submit" class="btn btn-outline-dark" style="width: 39%">Submit</button>
    </div>
</form>

<h1 id="owo" class="text-center mt-4"></h1>

<script>
    let form = document.forms["int"];

    function validate() {
        $.get(`https://projectrandomizerteambril.azurewebsites.net/int/${form['negative'].checked}`)
                    .done(function (data) {
                        $('#owo').text(data.value);
                        console.log(data.value);
                    }).catch((error) => $('#owo').text(error.statusText));
            
            return false;
    }

  
</script>

