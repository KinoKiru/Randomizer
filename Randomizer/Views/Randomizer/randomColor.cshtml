<div class="text-center mb-3">
    <h1 class="mb-0">Random kleur generator</h1>
    <small>Genereer een random kleur, als je een negative mogelijkheid op 'waar' zet dan krijg je een KnownColor</small>
    <small class="d-block"><i>Niels Rolleman</i></small>
</div>

<form method="get" onsubmit="return validate()" name="color" id="form" class="form-floating">
    <div class="row justify-content-center">
        <div class="form-check" style="width: fit-content">
            <input class="form-check-input" type="checkbox" value="" name="negative" id="formCheckChecked" checked="">
            <label class="form-check-label" for="formCheckChecked">bekende kleur?</label>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-3 row">
        <button type="submit" class="btn btn-outline-dark" style="width: 39%">Submit</button>
    </div>
</form>

<h1 id="owo" class="text-center mt-4"></h1>
<div id="uwu" class="m-auto" style="width: 200px; height: 200px;"></div>

<script>
    let form = document.forms["color"];

    function validate() {
        $.get(`https://projectrandomizerteambril.azurewebsites.net/random_color/${form['negative'].checked}`)
            .done(function (data) {
                $('#uwu').css("backgroundColor", data.value);
                $('#owo').text(data.value);
                console.log(data.value);
            }).catch((error) => $('#owo').text(error.statusText));

        return false;
    }

</script>

