@{
    ViewData["Title"] = "Random Names";

    if (ViewBag.Error != null)
    {
        <h1 class="text-bg-danger">@ViewBag.Error</h1>
    }
}
<div class="text-center mb-3">
    <h1 class="mb-0">Random namen generator</h1>
    <small>Genereer willekeurige namen uit verschillende landen</small>
    <small class="d-block"><i>Youri Blanckenborg</i></small>
</div>
<form method="get" asp-action="GetRandomNames" id="form" name="names" class="form-floating mb-5">
    <div class="row justify-content-center">
        <div class="form-floating me-4" style="width: 15em">
            <select asp-items="@ViewBag.Countries" class="form-select" name="country" id="country" required>
                <option>Selecteer een land</option>
            </select>
            <label for="country">Land</label>
        </div>
        <div class="form-floating me-4" style="width: 15em">
            <input type="number" class="form-control" name="amountOfNames" id="amountOfNames" placeholder="Aantal namen" value="@ViewBag.AmountOfNames" min="1" max="100" required />
            <label for="amountOfNames" class="ms-2">Aantal namen</label>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-3 row">
        <button type="submit" class="btn btn-outline-dark" style="width: 39%">Genereer</button>
    </div>
</form>

@if (ViewBag.Selected != null)
{
    foreach (string name in @ViewBag.Names)
    {
        <span class="me-3" style="font-size:20px">@name</span>
    }
}