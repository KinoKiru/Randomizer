<div class="text-center mb-3">
    <h1 class="mb-0">Random kaart generator</h1>
    <small>genereer een random kaart, je kunt kiezen of je jokers wilt</small>
    <small class="d-block"><i>Youri Bakker</i></small>
</div>

<form method="get" onsubmit="return validate()" name="card" id="form" class="form-floating">
    <div class="row justify-content-center">
        <div class="form-check" style="width: fit-content">
            <input class="form-check-input" type="checkbox" value="" name="jokers" id="formCheckChecked" checked="">
            <label class="form-check-label" for="formCheckChecked">Jokers mee genereren?</label>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-3 row">
        <button type="submit" class="btn btn-outline-dark" style="width: 39%">Submit</button>
    </div>
</form>

<div class="d-flex justify-content-center mt-5">
    <img id="owo" src="#" alt="Alternate Text" class="d-none w-25" />
</div>


<script>
    let form = document.forms["card"];

    function validate() {
        $.get(`http://localhost:5298/card/${form['jokers'].checked}`)
            .done(function (data) {
                        $('#owo').removeClass('d-none')
                        $('#owo').attr("src", `data:image/png;base64,${data.value}`);
                        console.log(data.value);
                    }).catch((error) => $('#owo').text(error.statusText));

            return false;
    }


</script>

